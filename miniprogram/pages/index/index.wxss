.container {
  margin: 10px;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  overflow: hidden;
}

.poem {
  flex: 1;
  width: 100%;
  text-align: center;
  display: flex;
  padding: 16px;
  flex-direction: column;
  transition: opacity 0.3s linear;
}

.poem.isLoading {
  opacity: 0;
}

.title {
  margin-top: 30rpx;
}

.chapter {
  font-size: 14px;
  color: #333;
  text-align: right;
}

.content {
  margin: 20rpx 0 40rpx;
  line-height: 2;
}

.menu-btn {
  position: fixed;
  top: 0;
  left: 10px;
}

.sider {
  position: absolute;
  top: 0;
  left: 0;
  width: 90%;
  min-height: 100%;
  background: #eee;
  transform: translateX(-100%);
  transition: transform 250ms ease-in-out;
}

.sider.show {
  box-shadow: 2rpx 0 8rpx 2rpx rgba(0, 0, 0, 0.2);
  transform: translateX(0);
}

.sider-wrap {
  display: flex;
  flex-direction: column;
}

.sider-header {
  position: fixed;
  width: 100%;
  padding: 6rpx 0;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  z-index: 999;
}

.header-label {
  flex: 1;
  text-align: center;
}

.sider-header .close-btn {
  border: none;
  background-color: #fff;
  position: absoulte;
  top: 0;
  right: 0;
}

.sider-list {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  height: 100vh;
  margin-top: 35px;
}

.list-item {
  width: 100%;
  flex: 1;
  padding: 6rpx;
  border-bottom: 1px solid #fff;
  text-align: center;
}